<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:gravity="bottom|center|top"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:cardCornerRadius="45dp"
            android:layout_gravity="center"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginVertical="60dp">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:src="@drawable/ic_bus" />
        </com.google.android.material.card.MaterialCardView>
        <EditText
            android:id="@+id/edt_user_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/corner_rounded_gray"
            android:ems="10"
            android:textSize="20dp"
            android:hint="Mobile number or email"
            android:inputType="text"
            android:padding="16dp" />

        <EditText
            android:id="@+id/edt_pass_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/corner_rounded_gray"
            android:ems="10"
            android:hint="Password"
            android:textSize="20dp"
            android:inputType="textPassword"
            android:padding="16dp"
            android:password="true" />

        <Button
            android:id="@+id/btLogin"
            android:layout_width="match_parent"
            android:layout_height="54dp"

            android:textColor="@color/black"
            android:backgroundTint="@android:color/transparent"
            android:padding="12dp"
            android:text="Đăng nhập" />

        <Button
            android:id="@+id/buttonForgotPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:text="Forgot password?"
            android:textColor="#3C3737"
            android:textSize="16sp" />

        <Button
            android:id="@+id/buttonSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/corner_rounded_blue"
            android:text="Create new account"
            android:textColor="@color/black"
            app:backgroundTint="@null" />

    </LinearLayout>

</LinearLayout>